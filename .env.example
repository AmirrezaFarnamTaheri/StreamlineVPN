# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
WEB_HOST=0.0.0.0
WEB_PORT=8000
API_BASE_URL=http://localhost:8080
WEB_STATIC_PATH=docs

# Environment
STREAMLINE_ENV=development
STREAMLINE_LOG_LEVEL=INFO
STREAMLINE_LOG_FILE=logs/streamline.log

# Redis Configuration (optional)
STREAMLINE_REDIS__NODES='[{"host":"localhost","port":"6379"}]'
STREAMLINE_REDIS__HOST=localhost
STREAMLINE_REDIS__PORT=6379
STREAMLINE_REDIS__DB=0
STREAMLINE_REDIS__PASSWORD=

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
ALLOWED_HEADERS=["Content-Type","Authorization"]
ALLOW_CREDENTIALS=false

# Jobs Configuration
JOBS_DIR=data
JOBS_FILE=data/jobs.json
JOB_CLEANUP_DAYS=7

# Processing Configuration
MAX_CONCURRENT=10
QUALITY_THRESHOLD=0.7
PROCESSING_TIMEOUT=30
VPN_TIMEOUT=30
VPN_CONCURRENT_LIMIT=50
VPN_RETRY_COUNT=3
VPN_MAX_CONFIGS_PER_SOURCE=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Configuration
DASHBOARD_TOKEN=
SECRET_KEY=your-secret-key-change-this-in-production
SESSION_TIMEOUT=3600

# External Services
TELEGRAM_BOT_TOKEN=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Database (Optional - SQLite fallback)
DATABASE_URL=sqlite:///data/streamline.db

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false
