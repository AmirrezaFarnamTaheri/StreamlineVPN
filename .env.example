# ================================================================
# StreamlineVPN Environment Configuration
# ================================================================

# Application Environment
STREAMLINE_ENV=development
STREAMLINE_LOG_LEVEL=INFO
STREAMLINE_LOG_FILE=logs/streamline.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=http://localhost:8080

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_STATIC_PATH=docs

# CORS Configuration (JSON format preferred)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]
ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
ALLOWED_HEADERS=["Content-Type","Authorization","X-Requested-With"]
ALLOW_CREDENTIALS=false

# Redis Configuration (JSON format for cluster nodes)
STREAMLINE_REDIS__HOST=localhost
STREAMLINE_REDIS__PORT=6379
STREAMLINE_REDIS__DB=0
STREAMLINE_REDIS__PASSWORD=
STREAMLINE_REDIS__NODES=[{"host":"localhost","port":"6379"}]

# Processing Configuration
VPN_TIMEOUT=30
VPN_CONCURRENT_LIMIT=50
VPN_RETRY_COUNT=3
VPN_MAX_CONFIGS_PER_SOURCE=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Configuration
DASHBOARD_TOKEN=
SECRET_KEY=your-secret-key-change-this-in-production
SESSION_TIMEOUT=3600

# Job Management
JOBS_DIR=data
JOBS_FILE=data/jobs.json
JOB_CLEANUP_DAYS=7

# External Services
TELEGRAM_BOT_TOKEN=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Database (Optional - SQLite fallback)
DATABASE_URL=sqlite:///data/streamline.db

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false
