# StreamlineVPN Environment Configuration
# Copy this file to .env and update values as needed

# ===========================
# Application Settings
# ===========================

# Environment (development, staging, production)
VPN_ENVIRONMENT=development

# Debug mode
VPN_DEBUG=false

# Application name
APP_NAME=StreamlineVPN

# ===========================
# API Server Configuration
# ===========================

# API host and port
API_HOST=0.0.0.0
API_PORT=8080

# API base URL (for frontend)
API_BASE_URL=http://localhost:8080

# API key for authentication (optional)
VPN_API_KEY=

# Rate limiting
VPN_RATE_LIMIT_RPM=100

# ===========================
# Web Server Configuration
# ===========================

# Web interface host and port
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Static file serving
SERVE_STATIC=true

# ===========================
# CORS Configuration
# ===========================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8080,http://127.0.0.1:8000,http://127.0.0.1:8080

# Allow credentials
ALLOW_CREDENTIALS=true

# Allowed methods
ALLOWED_METHODS=*

# Allowed headers
ALLOWED_HEADERS=*

# ===========================
# Processing Configuration
# ===========================

# Configuration file path
APP_CONFIG_PATH=config/sources.unified.yaml

# Output directory
VPN_OUTPUT_DIR=output

# Maximum concurrent operations
VPN_CONCURRENT_LIMIT=50

# Request timeout (seconds)
VPN_TIMEOUT=30

# Retry count for failed requests
VPN_MAX_RETRIES=3

# Chunk size for processing
VPN_CHUNK_SIZE=1000

# ===========================
# Output Formats
# ===========================

# Enable different output formats
VPN_WRITE_BASE64=true
VPN_WRITE_CSV=true
VPN_WRITE_JSON=true
VPN_WRITE_YAML=false
VPN_WRITE_RAW=true
VPN_WRITE_SINGBOX=true
VPN_WRITE_CLASH=true

# ===========================
# Cache Configuration
# ===========================

# Enable caching
VPN_CACHE_ENABLED=true

# Redis URL
VPN_REDIS_URL=redis://localhost:6379/0

# Cache TTL (seconds)
VPN_CACHE_TTL=3600

# Maximum cache size
VPN_CACHE_MAX_SIZE=10000

# ===========================
# Database Configuration
# ===========================

# PostgreSQL connection (optional)
DATABASE_URL=postgresql://user:password@localhost/streamlinevpn

# Connection pool size
DB_POOL_SIZE=20

# ===========================
# Logging Configuration
# ===========================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VPN_LOG_LEVEL=INFO

# Log file path (optional)
VPN_LOG_FILE=logs/streamlinevpn.log

# Log format
VPN_LOG_FORMAT=json

# Maximum log file size (MB)
VPN_LOG_MAX_SIZE=10

# Log backup count
VPN_LOG_BACKUP_COUNT=5

# ===========================
# Security Configuration
# ===========================

# JWT secret key (generate a secure random key)
JWT_SECRET_KEY=your-secret-key-here-change-this

# Password hashing rounds
BCRYPT_ROUNDS=12

# Session timeout (minutes)
SESSION_TIMEOUT=60

# Enable HTTPS only
HTTPS_ONLY=false

# SSL certificate paths (for HTTPS)
SSL_CERT_PATH=
SSL_KEY_PATH=

# ===========================
# Monitoring Configuration
# ===========================

# Enable metrics collection
METRICS_ENABLED=true

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Grafana port
GRAFANA_PORT=3000

# Enable tracing
TRACING_ENABLED=false

# Jaeger endpoint
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ===========================
# Machine Learning (Optional)
# ===========================

# Enable ML features
VPN_ML_ENABLED=false

# ML model path
VPN_ML_MODEL_PATH=models/quality_predictor.pkl

# Prediction threshold
VPN_ML_THRESHOLD=0.7

# ===========================
# Testing Configuration
# ===========================

# Test mode
VPN_TEST_MODE=false

# Test timeout
VPN_TEST_TIMEOUT=30

# Test concurrent operations
VPN_TEST_CONCURRENT=10

# Skip network tests
SKIP_NETWORK_TESTS=false

# ===========================
# Docker Configuration
# ===========================

# Docker network
DOCKER_NETWORK=streamlinevpn

# Container restart policy
RESTART_POLICY=unless-stopped

# ===========================
# Kubernetes Configuration
# ===========================

# Namespace
K8S_NAMESPACE=streamlinevpn

# Replica count
K8S_REPLICAS=3

# Resource limits
K8S_CPU_LIMIT=1000m
K8S_MEMORY_LIMIT=1Gi

# ===========================
# Feature Flags
# ===========================

# Enable auto-update
FEATURE_AUTO_UPDATE=true

# Update interval (seconds)
UPDATE_INTERVAL=43200

# Enable WebSocket support
FEATURE_WEBSOCKET=true

# Enable GraphQL API
FEATURE_GRAPHQL=false

# Enable discovery service
FEATURE_DISCOVERY=true

# Enable Zero Trust security
FEATURE_ZERO_TRUST=false

# ===========================
# External Services
# ===========================

# Telegram bot token (optional)
TELEGRAM_BOT_TOKEN=

# Discord webhook URL (optional)
DISCORD_WEBHOOK_URL=

# Slack webhook URL (optional)
SLACK_WEBHOOK_URL=

# Email configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@streamlinevpn.com

# ===========================
# Performance Tuning
# ===========================

# Worker processes
WORKERS=4

# Thread pool size
THREAD_POOL_SIZE=10

# Connection pool size
CONNECTION_POOL_SIZE=100

# Request queue size
REQUEST_QUEUE_SIZE=1000

# ===========================
# Cleanup Configuration
# ===========================

# Enable automatic cleanup
AUTO_CLEANUP=true

# Cleanup interval (hours)
CLEANUP_INTERVAL=24

# Maximum job age (hours)
MAX_JOB_AGE=72

# Maximum output files
MAX_OUTPUT_FILES=100
